{% extends "ClubBookingBundle::base.html.twig" %}

{% block pagenav %}
{% include "ClubBookingBundle:AdminPlanException:header.html.twig" %}
{% endblock %}

{% block body %}
<table class="table">
  <thead>
    <tr>
      <th>{% trans %}Plan{% endtrans %}</th>
      <th>{% trans %}Exclude rate{% endtrans %}</th>
      <th class="action">{% trans %}Action{% endtrans %}</th>
    </tr>
  </thead>
  <tbody>
  {% for excep in plan.planExceptions %}
    <tr>
      <td>{{ excep.plan.name }}</td>
      <td>{{ excep.excludeDate|club_datetime }}</td>
      <td>
        {% include "ClubLayoutBundle:Default:edit_link.html.twig" with {'url':path('club_booking_adminplanexception_edit', { 'id':excep.id })} %}
        {% include "ClubLayoutBundle:Default:delete_link.html.twig" with {'url':path('club_booking_adminplanexception_delete', { 'id':excep.id })} %}
      </td>
    </tr>
  {% else %}
  <tr>
    <td colspan="3">{% trans %}There are no exceptions.{% endtrans %}</td>
  </tr>
  {% endfor %}
  </tbody>
</table>
{% endblock %}
