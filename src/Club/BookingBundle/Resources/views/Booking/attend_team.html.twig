{% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
<fieldset>
    <legend>{% trans %}Attend{% endtrans %}</legend>

    <p>{% trans %}Click here to attend the team.{% endtrans %}</p>

    <form class="form-horizontal">
        <div class="form-actions">
        {% if app.user.attend(schedule) %}
            <a href="{{ path('club_team_team_unattend', { 'id':schedule.id }) }}" class="btn btn-error">{% trans %}Unattend{% endtrans %}</a>
        {% else %}
            <a href="{{ path('club_team_team_attend', { 'id':schedule.id }) }}" class="btn btn-primary">{% trans %}Attend{% endtrans %}</a>
        {% endif %}

        </div>
    </form>
</fieldset>
{% endif %}
