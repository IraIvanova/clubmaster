{% extends "ClubBookingBundle::base.html.twig" %}

{% block body %}

{% include "ClubBookingBundle:Booking:information.html.twig" %}

{% if is_granted('IS_AUTHENTICATED_REMEMBERED') and (is_granted('ROLE_BOOKING_ADMIN') or booking.isOwner(app.user)) %}
<div class="row">
    {% include "ClubBookingBundle:Booking:cancel_form.html.twig" %}

    {% if isParticipating %}
    {% include "ClubBookingBundle:Booking:morePlayers.html.twig" %}
    {% else %}
    {% include "ClubBookingBundle:Booking:addMe.html.twig" %}
    {% endif %}
</div>

{% elseif isParticipating %}
<div class="row">
    {% include "ClubBookingBundle:Booking:morePlayers.html.twig" %}
</div>

{% else %}
<div class="row">
    {% include "ClubBookingBundle:Booking:addMe.html.twig" %}
</div>

{% endif %}

{% endblock %}
