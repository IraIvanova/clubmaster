<div class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ path('localized') }}"><img src="{{ asset('bundles/clublayout/images/logo_top.png') }}" /></a>
        </div>
        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">

                {% for item in menu %}

                {% if item.header is defined and item.items is defined %}
                {% if item.items|length == 1 %}
                {% for i in item.items %}
                <li><a href="{{ i.route }}">{{ i.name }}</a></li>
                {% endfor %}
                {% else %}
                <li class="dropdown" role="menu">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{ item.header }} <span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">

                    {% for i in item.items %}
                    <li><a href="{{ i.route }}">{{ i.name }}</a></li>
                    {% endfor %}

                </ul>
                </li>
                {% endif %}
                {% else %}
                <li><a href="{{ item.route }}">{{ item.name }}</a></li>
                {% endif %}
                {% endfor %}
            </ul>
            {% endif %}

            <ul class="nav navbar-nav navbar-right">
            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}

                <li><a href="{{ path('club_dashboard_dashboard_index') }}"><img src="{{ asset('bundles/clublayout/images/icons/16x16/user.png') }}" /> {{ app.user.name }}</a></li>
                <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                    <li><a href="{{ path('user') }}"><span>{% trans %}Profile{% endtrans %}</span></a></li>
                    <li><a href="{{ path('club_user_location_index') }}"><span>{% trans %}Location{% endtrans %}</span></a></li>
                    {% for item in menu_right %}
                    <li><a href="{{ item.route }}"><span>{{ item.name }}</span></a></li>
                    {% endfor %}
                    <li class="divider"></li>
                    <li><a href="{{ path('club_welcome_blog_index') }}">{% trans %}Blog{% endtrans %}</a></li>
                    <li><a href="{{ path('logout') }}">{% trans %}Logout{% endtrans %}</a></li>

                </ul>
                </li>

            {% else %}
                <li class="dropdown" id="menuLogin">
                <a class="dropdown-toggle" href="#" data-toggle="dropdown" id="navLogin">Login</a>
                <div class="dropdown-menu" style="padding:17px; width: 400px;" id="slidedownMenu">

                    <form class="form-horizontal" role="form" method="POST" action="{{ path('login_check') }}">
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-4 control-label">{% trans %}Username{% endtrans %}</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="inputEmail3" placeholder="{% trans %}Username{% endtrans %}" name="_username">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword3" class="col-sm-4 control-label">{% trans %}Password{% endtrans %}</label>
                            <div class="col-sm-8">
                                <input type="password" class="form-control" id="inputPassword3" placeholder="Password" name="_password">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-4 col-sm-8">
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" name="_remember_me"> Remember me
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-4 col-sm-8">
                                <button type="submit" class="btn btn-success">{% trans %}Login{% endtrans %}</button>
                            </div>
                        </div>
                    </form>

                </div>
                </li>

            {% endif %}
            </ul>
        </div><!--/.nav-collapse -->
    </div>
</div>
