{% extends "ClubShopBundle::base.html.twig" %}

{% block pagenav %}
{% include "ClubShopBundle:AdminProduct:header.html.twig" %}
{% endblock %}

{% block body %}
<table class="table">
    <thead>
        <tr>
            <th>{% trans %}Product{% endtrans %}</th>
            <th>{% trans %}Active{% endtrans %}</th>
            <th class="action">{% trans %}Action{% endtrans %}</th>
        </tr>
    </thead>
    <tbody>
    {% for product in products %}
    <tr>
        <td>{% if product.image %}<img style="height: 25px" src="{{ asset(product.image.webPath) }}" />{% endif %} <a href="{{ path('admin_shop_product_edit', {'id':product.id}) }}">{{ product.productName }}</a></td>

        {% if product.active %}
        <td>{% include "ClubLayoutBundle:Default:boolean.html.twig" with {'flag':product.active, 'url':path('admin_shop_product_deactivate', {'id':product.id})} %}</td>
        {% else %}
        <td>{% include "ClubLayoutBundle:Default:boolean.html.twig" with {'flag':product.active, 'url':path('admin_shop_product_activate', {'id':product.id})} %}</td>
        {% endif %}

        <td>
            {% include "ClubLayoutBundle:Default:edit_link.html.twig" with {'url':path('admin_shop_product_edit', { 'id':product.id })} %}
            {% include "ClubLayoutBundle:Default:attribute_link.html.twig" with {'url':path('admin_shop_product_attribute', {'id':product.id})} %}
            {% include "ClubLayoutBundle:Default:attends_link.html.twig" with {'url':path('admin_shop_product_users', {'id':product.id})} %}
        </td>
    </tr>
    {% else %}
    <tr>
        <td colspan="2">{% trans %}There are no products.{% endtrans %}</td>
    </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
