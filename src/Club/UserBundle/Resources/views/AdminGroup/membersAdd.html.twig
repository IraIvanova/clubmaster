{% extends "ClubUserBundle::base.html.twig" %}

{% block header %}
<h1 class="page-header">{% trans with {'%group%':group.groupName} %}Group, %group%{% endtrans %}</h1>
{% endblock %}

{% block pagenav %}
{% include "ClubUserBundle:AdminGroup:header.html.twig" %}
{% endblock %}

{% block body %}
<form method="post" action="{{ path('club_user_admingroup_membersadd', {'id':group.id}) }}" class="form-horizontal">
  <fieldset>
    <legend>{% trans %}Add member{% endtrans %}</legend>

    <p>{% trans %}Here you can add players for this tournament.{% endtrans %}</p>
    {{ form_widget(form) }}
    {% include "ClubLayoutBundle:Default:submit_button.html.twig" %}
  </fieldset>
</form>

{% endblock %}
