{% extends "ClubWeatherBundle::base.html.twig" %}

{% block javascripts %}
<script type="text/javascript">
var currUrl = "{{ curr|raw }}";
var forecastUrl = "{{ forecastUrl|raw }}";
var units = "{{ units }}";
var degree = "{{ degree }}";
</script>

{% javascripts "@ClubWeatherBundle/Resources/public/js/weather.js" %}
<script src="{{ asset_url }}" type="text/javascript"></script>
{% endjavascripts %}
{% endblock %}

{% block stylesheets %}
<style>
div#overview { display: none }
</style>
{% endblock %}

{% block body %}
<div class="row">
    <div class="col-xs-12" id="status">
        <div class="hero-unit">
            <h3>{% trans %}Fetching weather informations from openweathermap.org...{% endtrans %}</h3>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xs-12" id="overview">
        <div class="panel panel-primary">
            <!-- Default panel contents -->
            <div class="panel-heading">{% trans %}Weather right now!{% endtrans %}</div>
            <div class="panel-body">
                <div class="weather-img">
                    <img id="curr-weather" alt="" src="" />
                </div>
                <div class="weather-body">
                    {% trans %}Location: <span id="curr-location"></span>{% endtrans %}<br>
                    {% trans with {'%degree%':degree} %}Current temperature: <span id="curr-temp"></span>&deg;%degree%{% endtrans %}<br>
                    {% trans %}Sunrise/sunset: <span id="curr-rise"></span>/<span id="curr-set"></span>{% endtrans %}<br>
                    {% trans with {'%units%':units} %}Current wind: <span id="curr-speed"></span>%units%, <span id="curr-dir"></span>{% endtrans %}<br />
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
